<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
        text-align:center;
        padding: 5px 0 5px 0;
      }
      a{
        text-decoration: none;
      }
      button.btn-edit{
        background: yellow;
        border: 1px solid gray;
        border-radius: 3px;
        margin-right: 10px;
        font-weight: bold;
        padding: 5px 10px 5px 10px;
        cursor: pointer;
        text-decoration: none;
        display: inline;
      }

      button.btn-edit:hover{
        background: rgb(188, 188, 14)
      }

      button.btn-delete{
        background: rgb(209, 106, 106);
        border: 1px solid gray;
        border-radius: 3px;
        margin-right: 10px;
        font-weight: bold;
        padding: 5px 10px 5px 10px;
        cursor: pointer;
        text-decoration: none;
      }

      button.btn-delete:hover{
        background: rgb(179, 86, 86)
      }
      
    </style>
    <title>User Information</title>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i<dataTable.length; i++) {%>
        <tr>
          <td><%=dataTable[i].firstName%></td>
          <td><%=dataTable[i].lastName%></td>
          <td><%=dataTable[i].email%></td>
          <td>
            <a href="edit-crud?id=<%=dataTable[i].id%>" ><button class="btn-edit" type="button">Edit</button></a>
            <a href="delete-crud?id=<%=dataTable[i].id%>" ><button class="btn-delete" type="button">Delete</button></a>
          </td>
        </tr>
      <% } %>
    </table>
  </body>
</html>
